{
  "compilerOptions": {
    "target": "es2020",
    "module": "es6",
    "moduleResolution": "node",
    "checkJs": false,
    "allowJs": true,
    "noEmitOnError": true,
    "lib": ["es2020", "dom"],
    "strict": false,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "sourceMap": true,
    "skipLibCheck": true,
    "inlineSources": true,
    "declaration": true
  },
}
