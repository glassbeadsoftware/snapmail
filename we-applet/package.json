{
  "name": "we-applet",
  "version": "0.0.1",
  "scripts": {
    "tsc": "tsc",
    "build": "tsc && rollup --config rollup.config.js",
    "build:watch": "tsc -w --preserveWatchOutput",
    "devtest": "npm run build && npm run package && cross-env HC_PORT=$(port) ADMIN_PORT=$(port) concurrently \"npm run start:happ\" \"npm run start:ui\"",
    "start:ui": "concurrently -k --names tsc,dev-server \"npm run build:watch\" \"wds --config ./web-dev-server.config.mjs\"",
    "start:happ": "RUST_LOG=warn WASM_LOG=debug  echo \"pass\" | hc s --piped -f=$ADMIN_PORT generate ../submodules/snapmail.happ --run=$HC_PORT -a snapmail-applet network mdns",
    "package": "rm -rf ui-applet.zip && cd dist && bestzip ../ui-applet.zip * && cd .. && hc web-app pack ./webhapp.workdir"
  },
  "dependencies": {
    "@holochain-open-dev/profiles": "^0.5.1",
    "@holochain/client": "^0.8.0",
    "@lightningrodlabs/we-applet": "^0.1.1",
    "@lit-labs/context": "^0.1.2",
    "@open-wc/scoped-elements": "^2.1.1",
    "@scoped-elements/material-web": "^0.0.19",
    "lit": "^2.2.0",
    "@snapmail/elements": "file:../webcomponents"
  },
  "devDependencies": {
    "@babel/preset-env": "^7.15.0",
    "@rollup/plugin-babel": "^5.3.0",
    "@rollup/plugin-commonjs": "18.0.0",
    "@rollup/plugin-node-resolve": "^13.0.4",
    "@rollup/plugin-replace": "^3.0.0",
    "@web/dev-server": "^0.1.21",
    "@web/dev-server-rollup": "^0.3.10",
    "@web/rollup-plugin-import-meta-assets": "^1.0.7",
    "babel-plugin-template-html-minifier": "^4.1.0",
    "bestzip": "^2.2.0",
    "concurrently": "^5.3.0",
    "deepmerge": "^4.2.2",
    "new-port-cli": "^1.0.0",
    "rollup": "^2.56.2",
    "rollup-plugin-node-builtins": "^2.1.2",
    "rollup-plugin-node-globals": "^1.4.0",
    "rollup-plugin-terser": "^7.0.2",
    "rollup-plugin-workbox": "^6.2.0",
    "rollup-plugin-copy": "^3.4.0",
    "tslib": "^2.3.1",
    "typescript": "^4.5.0"
  },
  "private": true
}
