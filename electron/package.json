{
  "name": "Snapmail",
  "version": "0.3.0",
  "description": "A minimalist P2P email application on holochain",
  "keywords": [
    "Electron",
    "Holochain"
  ],
  "author": "Harris-Braun Enterprises, LLC and contributors",
  "license": "CAL-1.0",
  "main": "out-tsc/main.js",
  "repository": {
    "type": "git",
    "url": "https://github.com/glassbeadsoftware/snapmail.git"
  },
  "scripts": {
    "postinstall": "electron-builder install-app-deps",
    "lint": "eslint --ext .ts src",
    "build": "cd .. && bash scripts/copy-binaries.sh && cd electron && tsc",
    "devtest": "npm run build && WASM_LOG=debug RUST_BACKTRACE=1 RUST_LOG=debug DEV_MODE='dev' ELECTRON_DEBUG_NOTIFICATIONS=true ELECTRON_DEFAULT_ERROR_MODE=true ELECTRON_ENABLE_LOGGING=true ELECTRON_ENABLE_STACK_DUMPING=true electron . default --disable-gpu --disable-software-rasterizer",
    "electron-dev": "tsc && WASM_LOG=debug RUST_BACKTRACE=1 RUST_LOG=debug DEV_MODE='dev' && electron . dev --no-sandbox",
    "alex": "tsc && ./node_modules/.bin/electron . alex --no-sandbox",
    "billy": "tsc && ./node_modules/.bin/electron . billy --no-sandbox",
    "camille": "tsc && ./node_modules/.bin/electron . camille --no-sandbox",
    "start-no": "./node_modules/.bin/electron electron --no-sandbox --enable-logging",
    "deploy-win": "electron-builder build --win --publish always",
    "deploy-mac": "electron-builder build --mac --publish always",
    "dist:publish": "electron-builder build --publish onTag",
    "dist": "electron-builder",
    "dist:build": "electron-builder build",
    "dist:linux": "electron-builder --linux tar.gz",
    "dist:linux-app": "electron-builder --linux AppImage",
    "dist:mac": "electron-builder --mac",
    "dist:win": "electron-builder --win",
    "dist:arm64": "electron-builder --arm64 --linux tar.gz"
  },
  "build": {
    "productName": "Snapmail",
    "afterSign": "./afterSignHook.js",
    "appId": "com.harris-braun.snapmail",
    "copyright": "Copyright Â© 2021-2023 Harris-Braun Enterprises LLC",
    "asar": false,
    "files": [
      "web/**/*",
      "out-tsc/*",
      "bin/*",
      "node_modules/**/*",
      "package.json"
    ],
    "directories": {
      "buildResources": "../assets",
      "output": "out-builder"
    },
    "linux": {
      "target": "AppImage"
    },
    "mac": {
      "target": "dmg"
    },
    "win": {
      "target": "nsis"
    },
    "publish": {
      "provider": "github",
      "releaseType": "prerelease",
      "publishAutoUpdate": true
    }
  },
  "devDependencies": {
    "@types/auto-launch": "^5.0.2",
    "@types/electron-prompt": "^1.6.1",
    "@typescript-eslint/eslint-plugin": "^5.39.0",
    "@typescript-eslint/parser": "^5.39.0",
    "bestzip": "^2.2.0",
    "concurrently": "^6.2.1",
    "concurrently-repeat": "^0.0.1",
    "cross-env": "^7.0.3",
    "electron": "19.0.0",
    "electron-builder": "^23.6.0",
    "electron-notarize": "^1.0.0",
    "eslint": "^8.24.0",
    "typescript": "^4.9.0"
  },
  "dependencies": {
    "@electron/remote": "^2.0.8",
    "@lightningrodlabs/electron-holochain": "^0.6.1",
    "auto-launch": "^5.0.5",
    "byte-base64": "^1.1.0",
    "command-exists": "^1.2.8",
    "dialogs": "^2.0.1",
    "electron-context-menu": "^0.12.1",
    "electron-debug": "^3.0.1",
    "electron-is-dev": "^1.2.0",
    "electron-log": "^4.4.6",
    "electron-notarize": "^1.1.1",
    "electron-osx-sign": "^0.4.14",
    "electron-prompt": "^1.7.0",
    "electron-updater": "^4.3.9",
    "fix-path": "^2.1.0",
    "lint": "^0.7.0",
    "open": "^6.3.0",
    "request": "^2.88.2",
    "sudo-prompt": "^9.0.0",
    "tslib": "^2.3.1",
    "tree-kill": "^1.2.2",
    "websocket": "^1.0.34",
    "ws": "^8.5.0"
  }
}
