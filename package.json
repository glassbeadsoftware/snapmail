{
  "name": "Snapmail",
  "version": "0.1.9",
  "description": "A minimalist P2P email application on holochain",
  "repository": {
    "type": "git",
    "url": "https://github.com/glassbeadsoftware/snapmail.git"
  },
  "main": "out-tsc/main.js",
  "scripts": {
    "postinstall": "electron-builder install-app-deps",
    "ci:hc-install": "bash scripts/ci/install-hc-tools.sh",
    "clean": "bash scripts/npm/clean.sh",
    "setup": "bash scripts/npm/setup.sh",
    "install:ui": "cd submodules/snapmail-ui && rm package-lock.json && npm install",
    "install:hash-zome": "bash scripts/npm/install-hash-zome.sh",
    "dist:dna": "bash scripts/npm/dist-dna.sh",
    "hash-zome": "bash scripts/npm/hash-zome.sh",
    "tsc": "tsc",
    "lint": "eslint --ext .ts electron-src",
    "build-dev": "bash scripts/build-ui.sh dev",
    "build-prod": "bash scripts/build-ui.sh prod",
    "start": "npm run build-prod && tsc && electron .",
    "electron": "tsc && electron .",
    "electron-dev": "tsc && set APP_DEV=true && electron . dev --no-sandbox",
    "alex": "./node_modules/.bin/electron . alex --no-sandbox",
    "billy": "./node_modules/.bin/electron . billy --no-sandbox",
    "camille": "./node_modules/.bin/electron . camille --no-sandbox",
    "start-no": "./node_modules/.bin/electron electron --no-sandbox --enable-logging",
    "dist:webhapp": "rm -f ui.zip && cd electron-ui && bestzip ../webhapp.workdir/ui.zip * && cd .. && hc web-app pack webhapp.workdir",
    "deploy-win": "set APP_DEV=false && electron-builder build --win --publish always",
    "deploy-mac": "electron-builder build --mac --publish always",
    "dist:publish": "set APP_DEV=false && electron-builder build --publish onTag",
    "dist": "electron-builder",
    "dist:build": "set APP_DEV=false && electron-builder build",
    "dist:linux": "electron-builder --linux tar.gz",
    "dist:linux-app": "electron-builder --linux AppImage",
    "dist:mac": "electron-builder --mac",
    "dist:win": "set APP_DEV=false && electron-builder --win",
    "dist:arm64": "electron-builder --arm64 --linux tar.gz"
  },
  "keywords": [
    "Electron",
    "Holochain"
  ],
  "author": "Harris-Braun Enterprises, LLC and contributors",
  "license": "CAL-1.0",
  "build": {
    "productName": "Snapmail",
    "afterSign": "./afterSignHook.js",
    "appId": "com.harris-braun.snapmail",
    "copyright": "Copyright Â© 2021-2022 Harris-Braun Enterprises LLC",
    "asar": false,
    "files": [
      "electron-ui/**/*",
      "out-tsc/*",
      "bin/*",
      "node_modules/**/*",
      "package.json"
    ],
    "directories": {
      "buildResources": "assets",
      "output": "out-builder"
    },
    "linux": {
      "target": "AppImage"
    },
    "mac": {
      "target": "dmg"
    },
    "win": {
      "target": "nsis"
    },
    "publish": {
      "provider": "github",
      "releaseType": "prerelease",
      "publishAutoUpdate": true
    }
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^5.30.4",
    "@typescript-eslint/parser": "^5.30.4",
    "bestzip": "^2.2.0",
    "concurrently": "^6.2.1",
    "concurrently-repeat": "^0.0.1",
    "cross-env": "^7.0.3",
    "electron": "17.1.1",
    "electron-builder": "^22.14.13",
    "electron-notarize": "^1.0.0",
    "eslint": "^8.19.0"
  },
  "dependencies": {
    "electron-holochain": "0.0.38",
    "auto-launch": "^5.0.5",
    "byte-base64": "^1.1.0",
    "command-exists": "^1.2.8",
    "dialogs": "^2.0.1",
    "electron-context-menu": "^0.12.1",
    "electron-debug": "^3.0.1",
    "electron-is-dev": "^1.2.0",
    "electron-log": "^4.4.6",
    "electron-notarize": "^1.1.1",
    "electron-osx-sign": "^0.4.14",
    "electron-prompt": "^1.7.0",
    "electron-updater": "^4.3.9",
    "fix-path": "^2.1.0",
    "lint": "^0.7.0",
    "open": "^6.3.0",
    "request": "^2.88.2",
    "sudo-prompt": "^9.0.0",
    "tree-kill": "^1.2.2",
    "websocket": "^1.0.34",
    "ws": "^8.5.0"
  }
}
