{
  "name": "Snapmail",
  "version": "0.1.5",
  "description": "A minimalist email application on holochain",
  "main": "src/main.js",
  "scripts": {
    "package"       : "rimraf ui.zip && cd ui && bestzip ../ui.zip * && cd .. && hc web-app pack workdir",
    "postinstall"   : "electron-builder install-app-deps",
    "deploy-win"    : "set APP_DEV=false && electron-builder build --win --publish always",
    "deploy-mac"    : "electron-builder build --mac --publish always",
    "dist"          : "electron-builder",
    "dist-linux"    : "electron-builder --linux tar.gz",
    "dist-linux-app": "electron-builder --linux AppImage",
    "dist-mac"      : "electron-builder --mac",
    "dist-win"      : "set APP_DEV=false && electron-builder --win",
    "dist-arm64"    : "electron-builder --arm64 --linux tar.gz",
    "build-win"     : "./scripts/build-ui.bat prod",
    "build-win-dev" : "./scripts/build-ui.bat dev",
    "build"         : ". scripts/build-ui.sh prod",
    "build-dev"     : ". scripts/build-ui.sh dev",
    "win"           : "electron . win --no-sandbox",
    "win-dev"       : "set APP_DEV=true && electron . win --no-sandbox",
    "start"         : "./node_modules/.bin/electron electron",
    "empty"         : "./node_modules/.bin/electron .",
    "alex"          : "./node_modules/.bin/electron . alex --no-sandbox",
    "billy"         : "./node_modules/.bin/electron . billy --no-sandbox",
    "camille"       : "./node_modules/.bin/electron . camille --no-sandbox",
    "start-no"      : "./node_modules/.bin/electron electron --no-sandbox --enable-logging",
    "dna-install"   : "bash scripts/workflow/install-hc-tools.sh",
    "dna-setup"     : "bash scripts/setup.sh",
    "dna-pack"      : "bash scripts/workflow/dna-pack.sh",
    "web-install"   : "cd build/snapmail-ui && rm package-lock.json && npm install",
    "build-prod"    : "bash scripts/workflow/build-ui-prod.sh",
    "dist-build"    : "set APP_DEV=false && electron-builder build",
    "build-hc"      : "bash scripts/workflow/build-hc-binaries.sh"
  },
  "repository": {
    "type": "git",
    "url" : "https://github.com/glassbeadsoftware/snapmail-release.git"
  },
  "keywords": [
    "Electron",
    "Holochain"
  ],
  "build": {
    "productName": "Snapmail",
    "afterSign": "./afterSignHook.js",
    "appId": "com.harris-braun.snapmail",
    "copyright": "Copyright Â© 2021 Harris-Braun Enterprises LLC",
    "asar": false,
    "files": [
      "src/*",
      "ui/**/*",
      "dna/*",
      "bin/*",
      "node_modules/**/*",
      "assets/**",
      "package.json"
    ],
    "directories": {
      "buildResources": "assets",
      "output": "out"
    },
    "publish": {
      "provider": "github"
    }
  },
  "author": "Harris-Braun Enterprises, LLC and contributors",
  "license": "CAL-1.0",
  "dependencies": {
    "@holochain/conductor-api": "0.2.4",
    "auto-launch": "^5.0.5",
    "byte-base64": "^1.1.0",
    "command-exists": "^1.2.8",
    "dialogs": "^2.0.1",
    "electron-context-menu": "^0.12.1",
    "electron-debug": "^3.0.1",
    "electron-is-dev": "^1.2.0",
    "electron-log": "^4.4.0",
    "electron-osx-sign": "^0.4.14",
    "electron-prompt": "^1.6.0",
    "electron-updater": "^4.3.9",
    "fix-path": "^2.1.0",
    "lint": "^0.7.0",
    "open": "^6.3.0",
    "request": "^2.88.2",
    "smalltalk": "^4.0.6",
    "sudo-prompt": "^9.0.0",
    "tree-kill": "^1.2.2"
  },
  "devDependencies": {
    "bestzip": "^2.2.0",
    "electron": "12.0.6",
    "electron-builder": "^22.11.7",
    "electron-notarize": "^1.0.0"
  }
}
