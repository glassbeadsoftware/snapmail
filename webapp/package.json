{
  "name": "snapmail",
  "version": "0.3.0",
  "scripts": {
    "lint": "eslint --ext .ts .",
    "tsc": "tsc",
    "todo:prebuild": "node -p \"'export const LIB_VERSION = ' + JSON.stringify(require('./package.json').version) + ';'\" > src/version.ts",
    "build": "rm -rf dist && tsc && rollup -c rollup.config.js && cd dist && cp * ../../electron/web",
    "build:watch": "run-singleton \"tsc -w --incremental --preserveWatchOutput\"",
    "start:ui": "web-dev-server --config ./web-dev-server.config.mjs",
    "package": "rm -rf snapmail-web-ui.zip && cd dist && bestzip ../snapmail-web-ui.zip * && cd .. && hc web-app pack ./webhapp.workdir"
  },
  "devDependencies": {
    "@babel/preset-env": "^7.15.0",
    "@rollup/plugin-babel": "^5.3.0",
    "@rollup/plugin-commonjs": "18.0.0",
    "@rollup/plugin-node-resolve": "^13.0.4",
    "@rollup/plugin-replace": "^3.0.0",
    "@rollup/plugin-typescript": "^8.2.5",
    "@web/dev-server": "^0.1.21",
    "@web/rollup-plugin-html": "^1.11.0",
    "@web/rollup-plugin-import-meta-assets": "^1.0.7",
    "babel-plugin-template-html-minifier": "^4.1.0",
    "bestzip": "^2.2.0",
    "concurrently": "^5.3.0",
    "deepmerge": "^4.2.2",
    "exits": "^2.0.1",
    "path-exists-cli": "^2.0.0",
    "rollup": "^2.56.2",
    "rollup-plugin-node-builtins": "^2.1.2",
    "rollup-plugin-node-globals": "^1.4.0",
    "rollup-plugin-terser": "^7.0.2",
    "rollup-plugin-workbox": "^6.2.0",
    "rollup-plugin-copy": "^3.4.0",
    "run-singleton-cli": "^0.0.5",
    "tslib": "^2.4.0",
    "typescript": "^4.9.0",
    "@typescript-eslint/eslint-plugin": "^5.39.0",
    "@typescript-eslint/parser": "^5.39.0",
    "eslint": "^8.24.0",
    "eslint-plugin-import": "^2.26.0"
  },
  "dependencies": {
    "@ddd-qc/lit-happ": "0.12.1",
    "@ddd-qc/cell-proxy": "0.12.1",
    "@holochain/client": "0.11.15",
    "@holochain-open-dev/core-types": "0.6.3",
    "@snapmail/elements": "file:../webcomponents",
    "@open-wc/scoped-elements": "^2.1.1",
    "lit": "2.3.1"
  }
}
